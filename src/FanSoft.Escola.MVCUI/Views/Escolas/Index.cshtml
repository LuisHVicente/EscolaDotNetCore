@model IEnumerable<Escola>

@{
    ViewBag.Title = "Escolas";
}

<div>
    <h2>@ViewBag.Title</h2>

    <p>
        Cadastro de Escolas
    </p>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-info">
            <tr>
                <th>Nome</th>
                <th>Fundação</th>
                <th>Cadastro</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Nome</td>
                <td>@item.DataFundacao.ToShortDateString()</td>
                <td>@item.DataCriacao.ToShortDateString()</td>
            </tr>
            }
        </tbody>
    </table>
</div>